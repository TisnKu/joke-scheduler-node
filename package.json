{
  "name": "joke-scheduler-node",
  "version": "0.1.2",
  "scripts": {
    "start": "NODE_ENV=dev && nodemon",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "build": "npm run tslint && tsc && ./web-build.sh",
    "test": "jest --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "path": "tspath",
    "migration:create": "typeorm migration:create -n "
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/src/**/*.spec.(ts|js)",
      "**/src/**/*.e2e.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "ajv": "^6.0.1",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "class-transformer": "^0.1.8",
    "class-validator": "^0.7.3",
    "compression": "^1.7.1",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "jsonwebtoken": "^8.1.0",
    "lodash": "^4.17.4",
    "lusca": "^1.5.2",
    "moment": "^2.20.1",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-facebook-token": "^3.3.0",
    "passport-local": "^1.0.0",
    "pg": "^7.4.1",
    "reflect-metadata": "^0.1.12",
    "request": "^2.83.0",
    "request-promise": "^4.2.2",
    "swagger-ui-express": "^2.0.14",
    "ts-express-decorators": "^3.7.0",
    "ts-log-debug": "^4.0.2",
    "tspath": "^1.2.10",
    "typeorm": "^0.2.4",
    "typescript-param-validator": "^1.1.0"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.2",
    "@types/compression": "0.0.33",
    "@types/dotenv": "^2.0.20",
    "@types/express": "^4.0.35",
    "@types/express-session": "^1.15.5",
    "@types/jest": "^21.1.5",
    "@types/lodash": "^4.14.80",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.62",
    "@types/nodemailer": "^1.3.32",
    "@types/passport": "^0.3.5",
    "@types/passport-facebook-token": "^0.4.33",
    "@types/passport-local": "^1.0.32",
    "@types/reflect-metadata": "^0.1.0",
    "@types/request": "^2.0.7",
    "@types/request-promise": "^4.1.39",
    "@types/supertest": "^2.0.0",
    "eslint": "^4.14.0",
    "jest": "^21.2.1",
    "node-sass": "^4.5.2",
    "nodemon": "^1.12.1",
    "shelljs": "^0.7.7",
    "supertest": "^2.0.1",
    "ts-jest": "^21.1.4",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "^5.8.0",
    "typescript": "^2.4.0"
  }
}
